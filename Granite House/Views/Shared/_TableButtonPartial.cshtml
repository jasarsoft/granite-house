<td style="width: 150px">
    <div class="btn-group" role="group">
        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model">
            <i class="far fa-edit"></i>
        </a>
        <a type="button" class="btn btn-success" asp-action="Details" asp-route-id="@Model">
            <i class="far fa-list-alt"></i>
        </a>
        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model">
            <i class="far fa-trash-alt"></i>
        </a>
    </div>
</td>